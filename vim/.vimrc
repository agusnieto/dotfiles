set nocompatible
syntax on

set relativenumber
set ruler

set backspace=indent,eol,start

set showcmd
set showmode
set scrolloff=5
set laststatus=2

set background=dark

set hlsearch
set incsearch 
set ignorecase
set smartcase

" tabs = 4 spaces (Python)
autocmd FileType python setlocal expandtab shiftwidth=4 softtabstop=4
